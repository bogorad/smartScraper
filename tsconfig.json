{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true, // Allow JS files during transition
    // "checkJs": true, // Type-check JS files (optional)
  },
  "include": [
    "src/**/*.ts",
    "tools/**/*.ts",
    "tests/**/*.ts",
    "config/**/*.ts",
    "test-url.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts", // Jest might handle these separately with ts-jest
    "**/*.test.ts"  // Jest might handle these separately with ts-jest
  ]
}
